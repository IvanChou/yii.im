<% unless flash[:notice].blank? %>
  <div class="alert alert-success">
    <button data-dismiss="alert" class="close">×</button>
    <%= flash[:notice] %>
  </div>
<% end %>
<% unless flash[:alert].blank? %>
  <div class="alert alert-error">
    <button data-dismiss="alert" class="close">×</button>
    <%= flash[:alert] %>
  </div>
<% end %>
<% unless flash[:error].blank? %>
  <div class="alert alert-error">
    <button data-dismiss="alert" class="close">×</button>
    <%= flash[:error] %>
  </div>
<% end %>
<%= render 'shared/errors' %>
